{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2019",
        "sourceMap": true,
        "outDir": "build",
        "allowJs": true,
        "checkJs": true,
        "lib": ["ES2019", "ES2020.BigInt", "ES2020.string", "ES2020.Symbol.WellKnown"],
        "esModuleInterop": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["server/**/*", "index.js"],
    "exclude": ["test/**/*", "client/**/*"]
}
