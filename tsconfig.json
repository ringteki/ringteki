{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "build",
        "allowJs": true,
        "checkJs": true,
        "lib": ["ES2021"],
        "esModuleInterop": true,
        "strictBindCallApply": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["server/**/*", "index.js"],
    "exclude": ["test/**/*", "client/**/*"]
}
